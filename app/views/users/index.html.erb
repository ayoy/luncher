<h2><%= t '.user_list' %></h2>

<% unless @users.empty? %>
  <p>
  <table>
    <thead>
    <tr>
      <td align='center'><b><%= t '.name' %></b></td>
      <td><b><%= User.human_attribute_name(:login) %></b></td>
      <td colspan=2 align='center'><b><%= User.human_attribute_name(:balance) %></b></td>
    </tr>
    <thead>
    <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.full_name %></td>
        <td><%= link_to "#{u.login}", user_path(u) %></td>
        <td id="user_<%= "#{u.id}" %>_balance"><%= to_currency u.balance %></td>
        <td>
          <% remote_form_for u, :url => user_path(u), :method => :put do |f| %>
            <%= f.text_field :balance, :size => 5, :id => "user_#{u.id}_balance_input" %>
            <%= f.submit t('.update_button'), :id => "user_#{u.id}_submit" %>
          <% end %>
        </td>
        <td><%= link_to t('.edit_account_link'), edit_user_path(u) %></td>
        <td><%= link_to t('.remove_account_link'), user_path(u), :method => :delete, :confirm => t('.sure_to_remove_account', :name => u.full_name) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </p>
<% end %>
