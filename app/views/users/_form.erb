<%= form.label :login %><br />
<%= form.text_field :login, :readonly => (not form.object.new_record?) %><br />
<br />
<%= form.label :password, form.object.new_record? ? nil : "Change password" %><br />
<%= form.password_field :password %><br />
<br />
<%= form.label :password_confirmation %><br />
<%= form.password_field :password_confirmation %><br />
<br />
<%= form.label :first_name %><br />
<%= form.text_field :first_name %><br />
<br />
<%= form.label :last_name %><br />
<%= form.text_field :last_name %><br />
<br />
<%= form.label :email %><br />
<%= form.text_field :email %><br />
<br />
<p>
  <%= form.label :email_notification_enabled, "Notify by email?" %>
  <%= form.check_box :email_notification_enabled %>
</p>
